<!-- Display user information if authenticated -->
<p>Welcome, {{user.username}}!</p>


<!-- Add section for user ratings -->
<section class="user-ratings">
    <h2>Your Ratings</h2>
    {{#if userRatings.length}}
    <ul>
        {{#each userRatings}}
        <img src="https://image.tmdb.org/t/p/w500/{{movie_data.poster_path}}" alt="{{movie_data.title}} Poster"
            class="poster" data-movie-id="{{id}}">

        <li>{{movie_data.title}} - Rated {{user_rating}} stars</li>
        <p>{{user_comment}}</p>
        {{/each}}
    </ul>
    {{else}}
    <p>No ratings yet! Start rating movies!</p>
    {{/if}}
</section>